{% extends '::index.html.twig' %}

{% block body -%}
    <h1>CrimeCases</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

    Category:<br />
    {{ entity.crimeCategory.name }}<br />

    Answers:<br />
    <ul>
    {% for answer in entity.answers %}
        <li>{{ answer }}</li>
    {%  endfor %}
    </ul>

        <ul class="record_actions">
    <li>
        <a href="{{ path('crimecases') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('crimecases_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
