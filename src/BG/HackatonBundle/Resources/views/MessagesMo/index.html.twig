{% extends '::index.html.twig' %}

{% block body -%}
    <h1>MessagesMo list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Message</th>
                <th>Sourceaddress</th>
                <th>Receivedtime</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('messagesmo_show', { 'id': entity.id }) }}">{{ entity.message }}</a></td>
                <td>{{ entity.sourceAddress }}</td>
                <td>{% if entity.receivedTime %}{{ entity.receivedTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('messagesmo_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('messagesmo_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('messagesmo_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
